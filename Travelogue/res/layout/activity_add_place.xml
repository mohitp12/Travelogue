<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
	android:layout_height="wrap_content">

<LinearLayout 
    
	android:orientation="vertical" android:layout_width="match_parent"
	android:weightSum="100" android:layout_height="match_parent">
	

		<LinearLayout android:orientation="vertical"
			android:layout_width="match_parent" android:layout_height="match_parent">

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Your Email Address:"
			    android:textAppearance="?android:attr/textAppearanceMedium">
			</TextView>
			
			<EditText android:layout_height="wrap_content"
				android:layout_width="match_parent" 
				android:id="@+id/etEmail">
			</EditText>

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Place name:"
			    android:textAppearance="?android:attr/textAppearanceMedium" 
			    android:layout_marginTop="10dp">
			</TextView>

			<EditText
			    android:id="@+id/placeName"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:hint="Name by which Place is Known" >
</EditText>

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Write Description of Place to be Added"
			    android:layout_marginTop="10dp"
			    android:textAppearance="?android:attr/textAppearanceMedium" />

			<EditText
			    android:id="@+id/placeDesc"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:ems="10"
			    android:hint="Enter the basic Info of Place"
			    android:inputType="textMultiLine" />

			<TextView
			    android:id="@+id/textView1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Latitude and Longitude of Place(Optional):"
			    android:layout_marginTop="10dp"
			    android:textAppearance="?android:attr/textAppearanceMedium" />

		</LinearLayout>
	

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >

		<TableLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >

		    <TableRow
		        android:id="@+id/tableRow1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >

		        <TextView
		            android:id="@+id/textView2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:text="Latitude:"
		            android:textAppearance="?android:attr/textAppearanceSmall" />

		        <EditText
		            android:id="@+id/latitude"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:ems="10"
		            android:inputType="numberDecimal" />

		    </TableRow>

		    <TableRow
		        android:id="@+id/tableRow2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >
		        
		        <TextView
		            android:id="@+id/textView2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:text="Longitude:"
		            android:textAppearance="?android:attr/textAppearanceSmall" />

		        <EditText
		            android:id="@+id/longitude"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:ems="10"
		            android:inputType="numberDecimal" />
		        
		    </TableRow>
		</TableLayout>

	    <Button
	        android:id="@+id/bSentEmail"
	        android:layout_width="fill_parent"
	        android:layout_height="70dp"
	        android:layout_marginTop="10dp"
	        android:background="@drawable/source_background2"
	        android:text="Send Request"
	        android:textColor="#FDFDFF"
	        android:textSize="25dp" />
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >

	    <ImageView
	        android:id="@+id/helpBtn"
	        android:layout_width="match_parent"
	        android:layout_height="70dp"
	        android:layout_gravity="center_horizontal"
	        android:onClick="help"
	        android:src="@drawable/new_help" />

	</LinearLayout>

</LinearLayout>
</ScrollView>